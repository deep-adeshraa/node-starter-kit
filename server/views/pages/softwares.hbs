<!DOCTYPE html>
<html>

<head>
    <title>
        {{title}}
    </title>
    {{> stylesheet }}
</head>

<body>
    {{> header }}
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h4 class="text-muted">Softwares</h4>
            </div>
        </div>
        <hr />
        <form action="/softwares/search" method="get">
            <div class="row text-center">
                <input type="text" name="searchQuery" placeholder="Search by tags" class="form-control center-block" style="width: 60%;" />
                <button class="btn btn-primary search-button">Search</button>
            </div>
        </form>

        {{#if topSoftwares}}
            <h3>Top Softwares</h3>
        {{/if}}
        {{#unless topSoftwares}}
            <h3>Searched Softwares for : {{searchQuery}}</h3>
        {{/unless}}

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Tag</th>
                    <th scope="col">Rating</th>
                </tr>
            </thead>
            <tbody>
                {{#each softwares}}
                    <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td><a href="/softwares/{{id}}" target="_blank">{{name}}</a></td>
                        <td>{{tag}}</td>
                        <td>{{rating}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{> footer}}
    {{> javascript }}
</body>

</html>