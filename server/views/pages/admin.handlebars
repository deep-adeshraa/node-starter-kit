<!DOCTYPE html>
<html>

<head>
    <title>
        Admin
    </title>
    {{> stylesheet }}
</head>

<body>
    {{> header }}
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3>Hello Admin</h3>
            </div>

            <div class="col-lg-6">
                <button type="button" class="btn btn-secondary pull-right" data-toggle="modal"
                    data-target="#createSoftware">
                    Create Software
                </button>
            </div>
        </div>

        {{!-- Create Software Modal --}}
        <div class="modal fade" id="createSoftware" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form action="/admin" method="post">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                Create Software</h4>
                        </div>

                        <div class="modal-body">
                            <fieldset class="form-group">
                                <label for="inputitle">Name</label>
                                <input type="text" id="inputitle" name="name" class="form-control"
                                    placeholder="Software name" required="">
                            </fieldset>

                            <fieldset class="form-group">
                                <label for="inputitle">Tag</label>
                                <input type="text" id="inputitle" name="tag" class="form-control"
                                    placeholder="Software tag" required="true">
                            </fieldset>

                            <fieldset class="form-group">
                                <label for="inputContent">Details</label>
                                <textarea id="inputContent" name="details" class="form-control"
                                    placeholder="Software Description" required="true">
                                </textarea>
                            </fieldset>

                            <fieldset class="form-group">
                                <label for="inputContent">Developer Name</label>
                                <input id="inputContent" name="developerName" class="form-control"
                                    placeholder="Software Developer" required="true">
                            </fieldset>

                            <fieldset class="form-group">
                                <label for="inputContent">Subscription price</label>
                                <input id="inputContent" type="number" name="subscriptionPrice" class="form-control"
                                    required="true">
                            </fieldset>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{!-- End Create Software Modal --}}

        <table class="table" style="margin-top: 20px;">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Tag</th>
                    <th scope="col">Rating</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each softwares}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td><strong><i>{{name}}</i></strong></td>
                    <td>{{tag}}</td>
                    <td>{{rating}}</td>
                    <td><button class="btn btn-primary">Edit</button></td>
                    <td>
                        <form method="get" action="/admin/delete">
                            <input type="hidden" name="deleteSoftwareId" value={{id}} />
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{> footer}}
    {{> javascript }}
</body>

</html>